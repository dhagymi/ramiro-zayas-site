extends ../base.pug 

block variables 
    - var template = "contact"

block content
    .contact 
        section.contact__wrapper
            h1.contact__title(data-animation="fade")=contact.data.title
            form.contact__form
                .contact__form__info
                    p.contact__form__info__legend(data-animation="fade")=contact.data.form_description 
                    p.contact__form__info__contactInfo(data-animation="fade")=contact.data.phone
                    p.contact__form__info__contactInfo(data-animation="fade")=contact.data["e-mail"]
                    .contact__form__info__social(data-animation="fade")
                        include ../partials/social
                .contact__form__inputs 
                    each input in contact.data.form 
                        if input.type == "textarea"
                            label.contact__form__inputs__label(data-animation="fade" for=input.placeholder_buttontext.toLowerCase())=input.placeholder_buttontext
                            textarea.contact__form__inputs__input.contact__form__inputs__input--textarea(data-animation="fade" name=input.placeholder_buttontext.toLowerCase() id=input.placeholder_buttontext.toLowerCase())
